<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.skailab.nikabuy.viewModels.AddCartViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_above="@+id/footer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="6dp"
                                android:id="@+id/googdImage"
                                app:imageUrl="@{viewModel.product.imageUrl}"
                                tools:src="@tools:sample/backgrounds/scenic"
                                android:scaleType="centerCrop"
                                />

                        </FrameLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/title"
                                android:text="@={viewModel.product.title}"
                                android:textSize="12sp"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:id="@+id/price"
                                android:text="@{viewModel.product.discountPriceRangetext}"
                                android:textSize="12sp"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:gravity="center_horizontal"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/title"
                                />
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/priceRange"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:visibility="@{viewModel.hasPriceRange?View.VISIBLE:View.GONE}"
                                android:layout_below="@+id/price">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:visibility="@{viewModel.hasPriceRange?View.VISIBLE:View.GONE}"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:textSize="12sp"
                                        android:visibility="@{viewModel.priceRange1.isHasPriceRange?View.VISIBLE:View.GONE}"
                                        android:text="@={viewModel.priceRange1.description}"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:textSize="12sp"
                                        android:visibility="@{viewModel.priceRange2.isHasPriceRange?View.VISIBLE:View.GONE}"
                                        android:text="@={viewModel.priceRange2.description}"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:visibility="@{viewModel.priceRange3.isHasPriceRange?View.VISIBLE:View.GONE}"
                                        android:text="@={viewModel.priceRange3.description}"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:visibility="@{viewModel.hasPriceRange?View.VISIBLE:View.GONE}"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:textColor="@color/colorAccent"
                                        android:visibility="@{viewModel.priceRange1.isHasPriceRange?View.VISIBLE:View.GONE}"
                                        app:Price="@{viewModel.priceRange1.price}"
                                        android:textSize="10sp"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:textSize="10sp"
                                        android:textColor="@color/colorAccent"
                                        android:visibility="@{viewModel.priceRange2.isHasPriceRange?View.VISIBLE:View.GONE}"
                                        app:Price="@{viewModel.priceRange2.price}"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:textSize="10sp"
                                        android:textColor="@color/colorAccent"
                                        android:visibility="@{viewModel.priceRange3.isHasPriceRange?View.VISIBLE:View.GONE}"
                                        app:Price="@{viewModel.priceRange3.price}"
                                        android:textAppearance="?attr/textAppearanceHeadline6"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/quantity"
                    android:visibility="@{viewModel.product.isHaveSkus? View.GONE:View.VISIBLE}"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/quantity"
                        android:inputType="number"
                        android:text="@{viewModel.quantity.toString()}"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="@{viewModel.product.isHaveSkus? View.GONE:View.VISIBLE}"
                    android:hint="@string/message_to_customer_service"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/messageToCustomer2"
                        android:inputType="textPersonName"
                        android:text="@{viewModel.messageToCustomerService}"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.product.isHaveSkus? View.VISIBLE:View.GONE}"
                    android:id="@+id/rcvProductItems"
                    app:productSkuItemData="@{viewModel.products}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="@{!viewModel.product.isHaveSkus? View.GONE:View.VISIBLE}"
                android:hint="@string/message_to_customer_service"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/messageToCustomer"
                    android:inputType="textPersonName"
                    android:text="@{viewModel.messageToCustomerService}"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:Price="@{viewModel.total}"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_cart"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:text="@string/buy_now"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
