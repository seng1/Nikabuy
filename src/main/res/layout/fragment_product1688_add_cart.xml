<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.skailab.nikabuy.viewModels.Product1688AddCartViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/footer"

            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:padding="6dp"
                                android:id="@+id/googdImage"
                                app:imageUrl="@{viewModel.product.imageUrl}"
                                tools:src="@tools:sample/backgrounds/scenic"
                                android:scaleType="centerCrop"
                                />
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="100dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/title"
                                android:text="@={viewModel.product.title}"
                                android:textSize="@dimen/text_size"
                                android:textStyle="bold"
                                android:lines="2"
                                android:gravity="center"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/price"
                                    android:text="@{viewModel.product.discountPriceRangetext}"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorYellowPrimaryDark"
                                    android:gravity="center"
                                    android:layout_alignParentRight="true"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icons_more_or_equal"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center_vertical"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="@dimen/text_size"
                                    android:id="@+id/textViewMinimumQty"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow  android:id="@+id/lnPriceTitle" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/table_row"
                            android:textSize="@dimen/text_size"
                            android:text="@string/price" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/table_row"
                            android:gravity="center"
                            android:textSize="@dimen/text_size"
                            android:text=""
                            android:textColor="@color/colorYellowPrimaryDark"
                            android:id="@+id/priceRange1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/table_row"
                            android:textSize="@dimen/text_size"
                            android:text=""
                            android:textColor="@color/colorYellowPrimaryDark"
                            android:id="@+id/priceRange2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/table_row"
                            android:gravity="center"
                            android:textSize="@dimen/text_size"
                            android:text=""
                            android:textColor="@color/colorYellowPrimaryDark"
                            android:id="@+id/priceRange3" />
                    </TableRow>
                    <TableRow   android:id="@+id/lnPriceValue">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/table_row"
                            android:gravity="center"
                            android:textSize="@dimen/text_size"
                            android:text="@string/baches" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/table_row"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorYellowPrimaryDark"
                            android:id="@+id/priceRangeValue1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/table_row"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorYellowPrimaryDark"
                            android:id="@+id/priceRangeValue2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/table_row"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorYellowPrimaryDark"
                            android:id="@+id/priceRangeValue3" />

                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size"
                        android:text="@string/remark"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size"
                        android:text="@string/addCartRemark1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:layout_alignParentRight="true"
                        android:text="@string/addCartRemark2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/lnQty"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/minusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/md_transparent"
                        android:src="@drawable/icons_minus" />
                    <EditText
                        android:id="@+id/qty"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:inputType="number"
                        android:text="1"
                        android:gravity="center"
                        android:background="@drawable/edittext_qty"
                        />
                    <ImageButton
                        android:id="@+id/plusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/md_transparent"
                        android:src="@drawable/icons_plus" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textViewStock"
                        android:text=""/>
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tvStockText"
                        android:textSize="@dimen/text_size"
                        android:text="@string/stock"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMainSkuText"
                    android:textSize="@dimen/text_size"
                    android:text=""/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcvMainSku"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/message_to_customer_service"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/messageToCustomer"
                        android:inputType="text"
                        android:text=""
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="@string/total_quantity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="5dp"
                    android:text=": "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorYellowPrimaryDark"
                    android:id="@+id/textViewTotalQty"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTotal"
                    android:textColor="@color/colorAccent"
                    android:text="@string/total"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="5dp"
                    android:text=": "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorYellowPrimaryDark"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTotalamount"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_cart"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:text="@string/buy_now"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
