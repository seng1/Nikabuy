<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="30dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text=""
                        android:id="@+id/chkCheck"
                        android:gravity="top"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <ImageView
                    android:layout_toRightOf="@+id/rndSelect"
                    android:id="@+id/img"
                    android:layout_marginLeft="30dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/img"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_alignBaseline="@+id/img"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:id="@+id/txtDetail" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:gravity="center"
                        android:id="@+id/txtSku" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/minusBtn"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/md_transparent"
                            android:src="@drawable/icons_minus" />
                        <EditText
                            android:id="@+id/quantity"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:inputType="number"
                            android:gravity="center"
                            android:background="@drawable/edittext_qty"
                            />
                        <ImageButton
                            android:id="@+id/plusBtn"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/md_transparent"
                            android:src="@drawable/icons_plus" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:id="@+id/textViewPrice">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="115dp"
                    android:layout_height="wrap_content"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorYellowPrimaryDark"
                        android:id="@+id/textViewTotal"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/deleteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"

                        android:background="@drawable/md_transparent"
                        android:src="@drawable/icons_delete" />
                    <ImageButton
                        android:id="@+id/messageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/md_transparent"
                        android:src="@drawable/icons_edit_chat" />
                    <ImageButton
                        android:id="@+id/messageNoBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/md_transparent"
                        android:src="@drawable/icons_edit_chat_no" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
